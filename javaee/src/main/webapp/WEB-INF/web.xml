<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>LoginFilter</filter-name>
  	<display-name>LoginFilter</display-name>
  	<description></description>
  	<filter-class>com.ipartek.formacion.javaee.filtros.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <listener>
  	<listener-class>com.ipartek.formacion.javaee.listener.Listener</listener-class>
  </listener>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.ipartek.formacion.javaee.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.javaee.libros.controladores.LoginServlet</servlet-class>
  </servlet>
  
   <servlet>
  	<servlet-name>CookiesTestServlet</servlet-name>
  	<servlet-class>com.ipartek.formacion.javaee.servlets.CookiesTestServlet</servlet-class>
  </servlet>
  
  
  
  <servlet>
  	<servlet-name>SeccionServlet</servlet-name>
  	<display-name>SeccionServlet</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.javaee.libros.controladores.SeccionServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Hola</servlet-name>
  	<display-name>Hola</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.javaee.servlets.HolaMundo</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Colores</servlet-name>
  	<display-name>Colores</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.javaee.servlets.Colores</servlet-class>
  </servlet>

  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/libros/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SeccionServlet</servlet-name>
  	<url-pattern>/libros/seccion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Hola</servlet-name>
  	<url-pattern>/hola</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>Colores</servlet-name>
  	<url-pattern>/colores</url-pattern>

  </servlet-mapping>
</web-app>
