<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	      version="3.0">

	<welcome-file-list>
		<welcome-file>colores</welcome-file>
	</welcome-file-list>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<description>
  	</description>
  	<display-name>LoginFilter</display-name>
  	<filter-name>LoginFilter</filter-name>
  	<filter-class>com.ipartek.formacion.javaee.filtros.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/admin/*</url-pattern>
  	<dispatcher>REQUEST</dispatcher>
  	<dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <listener>
  	<listener-class>com.ipartek.formacion.javaee.listeners.EjemploListener</listener-class>
  </listener>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.ipartek.formacion.javaee.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.ipartek.formacion.javaee.libros.controladores.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SeccionServlet</servlet-name>
  	<servlet-class>com.ipartek.formacion.javaee.libros.controladores.SeccionServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Hola</servlet-name>
  	<servlet-class>com.ipartek.formacion.javaee.servlets.HolaMundo</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Colores</servlet-name>
  	<servlet-class>com.ipartek.formacion.javaee.servlets.Colores</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/libros/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SeccionServlet</servlet-name>
  	<url-pattern>/libros/seccion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Hola</servlet-name>
  	<url-pattern>/hola</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Colores</servlet-name>
  	<url-pattern>/colores</url-pattern>
  </servlet-mapping>
</web-app>
